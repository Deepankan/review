<br />
<table class="table table-striped table-bordered" style="width:100%" id="example">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Gener</th>
        <th scope="col">No of Season</th>
        <th scope="col">Date of first Release</th>
        <th scope="col">Director</th>
        <th scope="col">Actor</th>
        <th scope="col">Shoot Location</th>
        <th scope="col">Country</th>
        <th scope="col">Avg. Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @tv_series.each do |tv_ser|%>
        <tr>
          <th scope="row"><%= tv_ser.name %></th>
          <td><%= tv_ser.gener %></td>
          <td><%= tv_ser.no_of_seasons %></td>
          <td><%= tv_ser.date_of_first_release %></td>
          <td><%= tv_ser.director %></td>
          <td><%= tv_ser.actor %></td>
          <td><%= tv_ser.shoot_location %></td>
          <td><%= tv_ser.country %></td>
          <td><%= tv_ser.avg_rating %></td>
        </tr>
      <% end %>
    </tbody>
</table>
